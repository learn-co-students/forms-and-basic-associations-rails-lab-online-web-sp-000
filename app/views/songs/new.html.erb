<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br><br>

  <%= f.label :genre %><br>
  <select name="[song][genre_name]" id="song_genre_id">
    <% Genre.all.each do |genre| %>
      <option id="<%= genre.id %>" value="<%= genre.name %>"><%= genre.name %></option>
    <% end %>
  </select><br><br>

  <%= f.label "Enter a note"%><br>
  <input type="text" id="song_notes_1" name="[song][note_contents][]"/><br><br>
  <%= f.label "Enter a note"%><br>
  <input type="text" id="song_notes_2" name="[song][note_contents][]"/><br><br>
  <%= f.label "Enter a note"%><br>
  <input type="text" id="song_notes_3" name="[song][note_contents][]"/><br><br>

  <%= f.submit %>
<% end %>
