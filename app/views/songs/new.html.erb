<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
<div>
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
</div>  

<div>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :name, :name %>
</div>

<div>
  <%= f.label :notes %>
  <input name='song[note_contents][]' id='song_notes_1'><br />
  <input name='song[note_contents][]' id='song_notes_2'><br />
  <input name='song[note_contents][]' id='song_notes_3'><br />
</div>

  <%= f.submit %>
<% end %>


