<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, list: "artist_autocomplete" %>
  <datalist id="artist_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.fields_for :notes do |notes_builder| %>
    <%= notes_builder.text_field :content %>
  <% end %>
  <%= f.submit %>
<% end %>
