<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_name %>
  <%= f.text_field :genre_name, list: "song_genre_id" %>
  <datalist id="song_genre_id">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <br />

  <%= f.label :notes %>
  <input name="song[notes][]", id="song_notes_attributes_0_content">
  <input name="song[notes][]", id="song_notes_attributes_1_content">
  <br />

  <%= f.submit %>
<% end %>


