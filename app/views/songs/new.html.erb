<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, "Song title" %><br>
  <%= f.text_field :title %><br>
  <br>

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <br>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <br>

  <textarea name="song[note_contents][]" id="song_notes_1">Enter a note here</textarea><br>
  <br>
  <textarea name="song[note_contents][]" id="song_notes_2">Enter a note here</textarea><br>
  <br>

  <%= f.submit %>
<% end %>