<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, @genres, :id, :name %><br>

  <%= f.label :notes, "Notes" %><br>
  <%= f.fields_for :notes do | notes_form | %>
    <%= notes_form.text_field :content, id: "song_notes_#{@counter}" %><br>
    <% @counter+=1 %>
  <% end %>

  <%= f.submit %>
<% end %>


