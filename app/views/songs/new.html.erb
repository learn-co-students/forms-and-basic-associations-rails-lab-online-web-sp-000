<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br />

  <%= f.fields_for :notes do |n| %>
    <%= n.label :notes %>
    <%= n.text_field :content, id: "song_notes_1" %>
  <% end %>

  <%= f.fields_for :notes do |m| %>
    <%= m.label :notes %>
    <%= m.text_field :content, id: "song_notes_2" %>
  <% end %>

  <%= f.submit %>
<% end %>


