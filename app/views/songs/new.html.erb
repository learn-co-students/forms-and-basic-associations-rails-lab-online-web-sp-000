<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br>

  <%= f.text_field :artist_name %>
  <datalist id= "names">
    <%= Artist.all.each do | artist | %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <input type="text" id= "song_notes_1" name= "songs[notes][]" >
  <input type="text" id= "song_notes_2" name= "songs[notes][]" >
  <input type="text" id= "song_notes_3" name= "songs[notes][]" >


  <%= f.submit %>
<% end %>


