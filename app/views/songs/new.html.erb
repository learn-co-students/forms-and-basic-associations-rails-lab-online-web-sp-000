<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist %>
  <%= f.text_field :artist %>
  <br />
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <textarea name="post[song_notes_1]"></textarea>
  <textarea name="post[song_notes_2]"></textarea>
  <textarea name="post[song_notes_3]"></textarea>
  <%= f.submit %>
<% end %>

