<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
<%= f.label :title %>
  <%= f.text_field :title %>
<%= f.label :artist_name %>
  <%= f.text_field :artist_name %>

   <%= f.collection_select :genre_id, @genres, :id, :name %>
  <br/>
  Note 1:<textarea name="song_notes_1" ></textarea><br>
  Note: 2 <textarea name="song_notes_2"></textarea><br>

  <%= f.submit %>
<% end %>


