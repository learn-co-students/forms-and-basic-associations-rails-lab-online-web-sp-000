<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "song_genre_id" %>
  <datalist id="song_genre_id">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.name %>">
    <% end %>
  </datalist>
  <input name="song[notes_attributes][]" id="song_notes_1">
  <input name="song[notes_attributes][]" id="song_notes_2">
  <br />

  <%= f.submit %>
<% end %>


